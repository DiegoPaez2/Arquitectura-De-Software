@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Conversor";
}
<style>
    body {
        background: url('@Url.Content("~/Content/images/fondo2.jpg")') no-repeat center center fixed;
        background-size: cover;
    }
</style>

<div class="container">
    <div class="box">
        <div style="display:flex; justify-content:space-between; align-items:center;">
            <h3>Conversor de Unidades</h3>
            <div>
                <span>Usuario: <b>@ViewBag.User</b></span>
                <a class="btn btn-danger" href="@Url.Action("Logout","Account")" style="margin-left:10px">Cerrar sesión</a>
            </div>
        </div>

        @if (ViewBag.Error != null)
        {<p style="color:#ffb3b3">@ViewBag.Error</p>}
        @if (ViewBag.Result != null)
        {
            <p style="color:#b2ffb2">Resultado: <b>@ViewBag.Result @ViewBag.ToUnit</b></p>
        }

        @using (Html.BeginForm("Index", "Conversion", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <label>Tipo de conversión</label>
            <select name="type">
                <option value="1">Kilómetros → Millas</option>
                <option value="2">Metros → Pies</option>
                <option value="3">Pulgadas → Centímetros</option>
                <option value="4">Kilogramos → Libras</option>
                <option value="5">Gramos → Onzas</option>
                <option value="6">Libras → Kilogramos</option>
                <option value="7">Celsius → Fahrenheit</option>
                <option value="8">Fahrenheit → Celsius</option>
                <option value="9">Celsius → Kelvin</option>
            </select>

            <label style="margin-top:14px;">Valor</label>
            <input type="text" name="value" />

            <div style="margin-top:14px">
                <button class="btn btn-primary" type="submit">Convertir</button>
            </div>
        }
    </div>
</div>
