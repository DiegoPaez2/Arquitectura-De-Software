@{
    Layout = null;
    var title = ViewBag.Title ?? "02.CLIWEB";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@title</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: Segoe UI;
        }

        .box {
            background: rgba(0,0,0,.55);
            padding: 20px;
            border-radius: 8px;
            color: #fff;
        }

        .btn {
            padding: 8px 14px;
            border: 0;
            border-radius: 4px;
            cursor: pointer;
        }

        .btn-primary {
            background: #2196f3;
            color: #fff;
        }

        .btn-danger {
            background: #f44336;
            color: #fff;
        }

        input, select {
            padding: 6px 8px;
            width: 260px;
        }

        label {
            display: block;
            margin-top: 10px;
            color: #fff;
            font-weight: bold;
        }

        .container {
            width: 420px;
            margin: 80px auto;
        }
    </style>
</head>
<body>
    @RenderBody()
</body>
</html>
